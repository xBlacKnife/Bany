<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bany_Dark" parent="Theme.MaterialComponents">

        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/bany_bg_0</item>
        <item name="colorPrimary">@color/bany_button_bg_0</item>
        <item name="colorPrimaryVariant">@color/bany_bg_0</item>
        <item name="colorOnPrimary">@color/bany_text_0</item>
        <item name="android:textColor">@color/bany_text_0</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bany_Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bany_Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bany_Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>