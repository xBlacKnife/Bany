<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bany_Pascal_S" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/bany_bg_1</item>
        <item name="colorPrimary">@color/bany_button_bg_1</item>
        <item name="colorPrimaryVariant">@color/bany_bg_1</item>
        <item name="colorOnPrimary">@color/bany_text_1</item>
        <item name="android:textColor">@color/bany_text_1</item>

        <item name="colorSecondary">@color/bany_button_bg_1</item>
        <item name="colorSecondaryVariant">@color/bany_bg_1</item>
        <item name="colorOnSecondary">@color/bany_text_1</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="menuImage">@drawable/light_museo_logo</item>

        <!-- Customize your theme here. -->

        <!-- Tool Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarMuseumLogo">@drawable/light_ucm_logo</item>

        <!-- Text -->
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Theme.Bany_Pascal_S.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bany_Pascal_S.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.Bany_Pascal_S.PopupOverlay" parent="ThemeOverlay.AppCompat" />

</resources>