<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/artifact_info"
    tools:context=".fragments.ArtifactInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fadingEdgeLength="25dp"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageview_artifact_info_artifactimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yoshi_wallpaper" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton_artifact_info_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignRight="@id/imageview_artifact_info_artifactimage"
                    android:layout_alignBottom="@id/imageview_artifact_info_artifactimage"

                    android:layout_marginHorizontal="16dp"

                    android:layout_marginVertical="16dp"
                    android:clickable="true"
                    android:src="@android:drawable/ic_media_play"

                    app:elevation="4dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_artifact_info_artifacttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"

                    android:text="Yoshi"

                    android:textSize="32sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider_artifact_info"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textview_artifact_info_artifactdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="10dp"
                    android:text="@string/yoshi_description" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_artifact_info_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <Button
                    android:id="@+id/button_artifact_info_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/previous" />

                <Button
                    android:id="@+id/button_artifact_info_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/next" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>