<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArtifactInfo">

    <ImageView
        android:id="@+id/imageview_artifact_info_artifactimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/yoshi_wallpaper" />

    <ProgressBar
        android:id="@+id/progressBar_artifact_info_soundprogress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_artifact_info_artifactimage"/>

    <LinearLayout
        android:id="@+id/linearlayout_artifact_info_titleandplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginLeft="16dp"

        android:layout_below="@+id/imageview_artifact_info_artifactimage">

        <TextView
            android:id="@+id/textview_artifact_info_artifacttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:textSize="32sp"

            android:text="Yoshi Musical"
            android:textStyle="bold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_artifact_info_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="true"

            app:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"

            android:src="@android:drawable/ic_media_play" />

    </LinearLayout>


    <View
        android:id="@+id/divider_artifact_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"

        android:layout_below="@+id/linearlayout_artifact_info_titleandplay"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_artifact_info"

        android:layout_marginVertical="8dp"

        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/textview_artifact_info_artifactdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lineSpacingExtra="10dp"
                android:text="@string/yoshi_description" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>