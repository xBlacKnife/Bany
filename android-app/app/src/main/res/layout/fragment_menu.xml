<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.Menu">

    <ImageView
        android:id="@+id/imageview_menu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:maxWidth="250dp"
        android:maxHeight="250dp"
        android:layout_marginBottom="48dp"
        android:src="?attr/menuImage" />

    <Button
        android:id="@+id/button_menu_info"
        android:layout_width="296dp"
        android:layout_height="81dp"
        android:layout_marginBottom="30dp"
        android:text="@string/menu_info"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/button_menu_free"
        android:layout_width="296dp"
        android:layout_height="81dp"
        android:layout_marginBottom="30dp"
        android:text="@string/menu_free"
        android:textSize="30sp"
         />

    <Button
        android:id="@+id/button_menu_guided"
        android:layout_width="296dp"
        android:layout_height="81dp"


        android:text="@string/menu_guided"
        android:textSize="30sp"
         />





</LinearLayout>